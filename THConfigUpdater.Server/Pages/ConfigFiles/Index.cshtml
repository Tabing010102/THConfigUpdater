@model THConfigUpdater.Server.Pages.ConfigFiles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ConfigFile[0].FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigFile[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigFile[0].Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigFile[0].Sha256)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigFile[0].ClientPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigFile[0].ServerPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigFile[0].ServerUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfigFile[0].FileBasedConfig)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ConfigFile) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sha256)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServerPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServerUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileBasedConfig.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
